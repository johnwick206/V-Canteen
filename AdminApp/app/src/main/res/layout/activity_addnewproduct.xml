<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:context=".Addnewproduct"
	android:background="@mipmap/add_new_product_bg"
	android:layout_marginBottom="50dp"
	android:layout_marginTop="50dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.cardview.widget.CardView
			android:layout_width="400dp"
			android:layout_height="230dp"
			android:id="@+id/imageView"
			android:layout_marginTop="30dp"
			android:layout_marginHorizontal="15dp"
			app:cardCornerRadius="150dp"
			app:cardElevation="10dp">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:igonre="ContentDescription"
		android:id="@+id/image"
		android:clickable="true"
		android:scaleType="centerCrop"/>

		</androidx.cardview.widget.CardView>

	<EditText
		android:id="@+id/itemName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginHorizontal="50dp"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/imageView"
		android:hint="Food Item Name"
		android:textColor="#fff"/>

	<EditText
		android:id="@+id/itemCost"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginHorizontal="50dp"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/itemName"
		android:hint="cost"
		android:textColor="#fff"/>

	<TextView
		android:id="@+id/optionText"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:text="Choose Place"
		android:textSize="30sp"
		android:textAlignment="center"
		android:background="@drawable/option_textview"
		android:textColor="#000"
		android:layout_marginHorizontal="40dp"
		android:clickable="true"
		android:layout_below="@+id/itemCost"
		android:layout_marginTop="20dp" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:text="Catgory"
		android:layout_centerInParent="true"
		android:textSize="30sp"
		android:textAlignment="center"
		android:background="@drawable/option_textview"
		android:textColor="#000"
		android:id="@+id/catagory"
		android:layout_marginHorizontal="40dp"
		android:layout_below="@+id/optionText"
		android:layout_marginTop="30dp"
		android:clickable="true"/>

	<Button
		android:id="@+id/addItemButton"
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:textColor="#000"
		android:textSize="20dp"
		android:layout_below="@id/catagory"
		android:layout_marginHorizontal="80dp"
		android:fontFamily="serif"
		android:layout_marginTop="30dp"
		android:text="Add Item"
		android:background="@drawable/add_itembtn"/>

	</RelativeLayout>
	</ScrollView>